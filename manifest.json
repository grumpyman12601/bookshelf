{
  "manifest_version": 3,
  "name": "bookshelf",
  "description": "Hides your bookshelf for a clean desktop",
  "version": "1.0",
  "permissions": ["tabs", "offscreen", "activeTab", "scripting"],
  "action": {
    "default_popup": "main.html",
    "default_icon": "icon.svg"
  },
  "background": {
    "service_worker": "background.js"
  }
}
