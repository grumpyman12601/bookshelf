{
  "manifest_version": 3,
  "name": "bookshelf",
  "description": "Hides your bookshelf for a clean desktop, use with LivePaper.",
  "version": "1.0",
  "author": "drewhamer988@gmail.com",
  "permissions": ["tabs", "offscreen", "activeTab", "scripting"],
  "icons": {
    "512": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "main.html"
  }
}
